{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "CreateProductModel",
  "type": "object",
	"required": ["name", "type", "unit"],
  "properties": {
		"name": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"type": {
			"type": "string",
			"enum": ["food", "clothes"]
		},
		"unit": {
			"type": "string",
			"enum": ["unit", "kg"]
		},
		"description": {
			"type": "string",
			"minLength": 1,
			"maxLength": 150
		},
		"tags": {
			"type": "array"
		}
	}
}
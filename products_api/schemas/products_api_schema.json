{
    "openapi": "3.0.1",
    "info": {
        "title": "Products API",
        "version": "1.0"
    },
    "x-amazon-apigateway-request-validators" : {
        "full" : {
          "validateRequestBody" : true,
          "validateRequestParameters" : true
        },
        "body-only" : {
          "validateRequestBody" : true,
          "validateRequestParameters" : false
        }
    },
    "x-amazon-apigateway-request-validator" : "full",
    "paths": {
        "/create-products": {
            "post": {
                "x-amazon-apigateway-request-validator": "body-only",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "products": {
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": true,
                                        "items": {
                                            "$ref": "#/components/schemas/Product"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": ""
                    }
                }
            }
        },
        "/get-products?id={productId}": {
            "parameters": [
                {
                    "description": "Product Id",
                    "in": "query",
                    "name": "productId",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        },
        "/get-products?name={productName}": {
            "parameters": [
                {
                    "description": "Product Name",
                    "in": "query",
                    "name": "productName",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "required": ["name", "type", "unit"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 50
                    },
                    "brand": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 50
                    },
                    "type": {
                        "enum": [
                            "Food", 
                            "Clothes", 
                            "Furniture"
                        ]
                    },
                    "unit": {
                        "type": "string",
                        "enum": [
                            "Unit", 
                            "Kilograms", 
                            "Meters"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 150
                    },
                    "tags": {
                        "type": "array",
                        "uniqueItems": true,
                        "minItems": 0,
                        "maxItems": 5,
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
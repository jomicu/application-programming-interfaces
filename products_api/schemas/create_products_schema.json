{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://api.jomicu.com/products/schemas/createproductmodel.json",
  "title": "CreateProductModel",
  "type": "object",
	"required": ["products"],
  "additionalProperties": false,
	"definitions": {
		"product": {
			"type": "object",
			"required": ["name", "type", "unit"],
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1,
					"maxLength": 50
				},
				"brand": {
					"type": "string",
					"minLength": 1,
					"maxLength": 50
				},
				"type": {
					"enum": [
						"food", 
						"clothes", 
						"furniture"
					]
				},
				"unit": {
					"type": "string",
					"enum": [
						"unit", 
						"kilograms", 
						"meters"
					]
				},
				"description": {
					"type": "string",
					"minLength": 1,
					"maxLength": 150
				},
				"tags": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"minItems": 0,
					"maxItems": 5
				}
			}
		}
	},
  "properties": {
		"products": {
			"type": "array",
			"minItems": 1,
      "maxItems": 50,
      "uniqueItems": true,
      "title": "The products array holding products to be created",
			"items": { "$ref": "#/definitions/product" }
		}
	}
}